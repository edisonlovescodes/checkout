generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CompanyConfig {
  id           String   @id @default(cuid())
  companyId    String   @unique
  headline     String   @default("")
  subheadline  String   @default("")
  ctaText      String   @default("Checkout")
  basePlanId   String
  redirectUrl  String?
  webhookUrl   String?
  allowPrefill Boolean  @default(true)
  theme        String
  accent       String
  showBadges   Boolean  @default(false)
  bumps        Bump[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([companyId])
}

model Bump {
  id              String   @id @default(cuid())
  companyConfigId String
  title           String
  description     String
  priceLabel      String
  planId          String
  badge           String?
  highlightColor  String?
  position        String
  defaultSelected Boolean  @default(false)
  sortIndex       Int
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  companyConfig CompanyConfig @relation(fields: [companyConfigId], references: [id], onDelete: Cascade)

  @@index([companyConfigId])
  @@unique([companyConfigId, sortIndex])
}

model WebhookForwardLog {
  id          String   @id @default(cuid())
  paymentId   String
  companyId   String
  event       String
  status      String
  attempts    Int      @default(0)
  lastAttempt DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([paymentId, companyId, event])
}
